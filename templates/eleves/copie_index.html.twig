{% extends 'base.html.twig' %}

{% block title %}Eleves index{% endblock %}

{% block body %}
<h1>Eleves index</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Identification</th>
            <th>Sexe</th>
            <th>DateNaissance</th>
            <th>NumActe</th>
            <th>DateActe</th>
            <th>DateRecrutement</th>
            <th>DateInscription</th>
            <th>Matricule</th>
            <th>IsAdmin</th>
            <th>IsAllowed</th>
            <th>IsActif</th>
            <th>IsHandicap</th>
            <th>NatureHandicape</th>
            <th>StatutFinance</th>
            <th>ImageName</th>
            <th>ImageSize</th>
            <th>UpdatedAt</th>
            <th>CreatedAt</th>
            <th>Slug</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for elefe in eleves %}
        <tr>
            <td>{{ elefe.id }}</td>
            <td>{{ elefe.prenom }} {{ elefe.nom }}</td>
            <td>{{ elefe.sexe }}</td>
            <td>{{ elefe.dateNaissance ? elefe.dateNaissance|date('d-m-Y') : '' }}</td>
            <td>{{ elefe.numActe }}</td>
            <td>{{ elefe.dateActe ? elefe.dateActe|date('d-m-Y') : '' }}</td>
            <td>{{ elefe.dateRecrutement ? elefe.dateRecrutement|date('d-m-Y') : '' }}</td>
            <td>{{ elefe.dateInscription ? elefe.dateInscription|date('d-m-Y') : '' }}</td>
            <td>{{ elefe.matricule }}</td>
            <td>{{ elefe.isAdmin ? 'Yes' : 'No' }}</td>
            <td>{{ elefe.isAllowed ? 'Yes' : 'No' }}</td>
            <td>{{ elefe.isActif ? 'Yes' : 'No' }}</td>
            <td>{{ elefe.isHandicap ? 'Yes' : 'No' }}</td>
            <td>{{ elefe.natureHandicape }}</td>
            <td>{{ elefe.statutFinance }}</td>
            <td>{{ elefe.imageName }}</td>
            <td>{{ elefe.imageSize }}</td>
            <td>{{ elefe.updatedAt ? elefe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ elefe.createdAt ? elefe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ elefe.slug }}</td>
            <td>
                <a href="{{ path('app_eleves_show', {'id': elefe.id}) }}">show</a>
                <a href="{{ path('app_eleves_edit', {'id': elefe.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="20">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_eleves_new') }}">Create new</a>

<div class="container">
    <div class="row">
        <div class="d-flex align-items-center justify-content-center">
            {{ knp_pagination_render(eleves) }}
        </div>
    </div>
</div>

{% endblock %}