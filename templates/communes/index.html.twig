{% extends 'base.html.twig' %}

{% block title %}Communes index{% endblock %}

{% block body %}
    <h1>Communes index</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Région</th>
                <th scope="col">Cercle</th>
                <th scope="col">Designation</th>
                <th scope="col">Créé le</th>
                <th scope="col">Mis à jour le</th>
                <th scope="col">Slug</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                <td>{{ commune.id }}</td>
                <td>{{ commune.cercle.region }}</td>
                <td>{{ commune.cercle }}</td>
                <td>{{ commune.designation }}</td>
                <td>{{ commune.createdAt ? commune.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commune.updatedAt ? commune.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commune.slug }}</td>
                <td>
                    <a href="{{ path('app_communes_show', {'id': commune.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_communes_edit', {'id': commune.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('app_communes_new') }}">Create new</a>
{% endblock %}
