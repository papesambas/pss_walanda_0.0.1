{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <h1>Réinitialiser votre mot de passe</h1>

    <p>Entrez votre nouveau mot de passe ci-dessous pour le réinitialiser.</p>

    {{ form_start(resetForm) }}
        <div class="mb-3">
            {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
            {{ form_widget(resetForm.plainPassword, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nouveau mot de passe'} }) }}
            {{ form_errors(resetForm.plainPassword) }}
        </div>

        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(resetForm) }}

    <p><a href="{{ path('app_login') }}">Retour à la page de connexion</a></p>
{% endblock %}
